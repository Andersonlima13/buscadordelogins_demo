{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "views/**",
          "css/**", 
          "img/**",
          "model/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(css|img|public)/(.*)",
      "dest": "/$1/$2"
    },
    {
      "src": "/(.*)", 
      "dest": "app.js"
    }
  ]
}