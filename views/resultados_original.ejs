<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/teste.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="icon" href="/img/fav_colegiovila.png" type="image/x-icon">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/resultados.css">
    <title>Central Logins</title>
</head>

<body>

    <i class="bi bi-list menu-mobile"></i>

    <aside id='header'>
        <nav id='navbar' class="nav-menu">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/"><i class="bi bi-house" aria-hidden="true"></i> Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/dashboards"><i class="bi bi-person" aria-hidden="true"></i> Dashboards</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#habilidades"><i class="bi bi-list-check" aria-hidden="true"></i> Suporte</a>
                </li>
            </ul>
        </nav>
    </aside>

    <main id="main">
        <section class="h-100 gradient-form" style="background: linear-gradient(90deg, rgb(14, 34, 63) 1%, rgb(21, 132, 111) 100%);">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-xl-10">
                        <div class="card rounded-3 text-black bg-black border">
                            <div class="row g-0">
                                <div class="col-lg-6 rounded-5" id="input-container">
                                    <div class="card-body p-md-5 mx-md-4">
                                        <h4 class="mt-1 mb-5 pb-1 fw-bold">Resultados Da Busca</h4>
                                        <div>
                                            <ul class="lista-nomes">
                                                <% alunos.forEach(aluno => { %>
                                                  <li class="nome">
                                                    <a href="/aluno/<%= aluno.matricula %>">
                                                      <%= aluno.nome %> | <%= aluno.serie %>
                                                    </a>
                                                  </li>
                                                <% }); %>
                                              </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center rounded-5" id="logo-container">
                                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                        <img src="/img/logo_vila.png" style="width: 320px;" alt="logo">
                                        <p class="pt-4">Ferramenta para consulta de logins de nossas plataformas digitais.<br> <b> Equipe de TI & TE Colegio vila.</b></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            function validar() {
                var searchType = document.getElementById('input-select').value;
                var param = document.getElementById('param').value;
                var errorMessage = document.getElementById('error-message');

                if (searchType === 'matricula') {
                    var isNumeric = /^\d+$/.test(param);
                    if (!isNumeric) {
                        errorMessage.textContent = "Ops! vocÃª selecionou o campo 'MATRICULA' ao buscar um nome, Selecione o campo 'NOME' se deseja buscar um aluno por nome";
                        errorMessage.style.display = 'block';
                        return false;
                    }
                }
                errorMessage.style.display = 'none';
                return true;
            }
        </script>
    </main>
</body>
</html>
